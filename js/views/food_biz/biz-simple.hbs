<h1>{{ title }}</h1>

<a href="/biz-adv?section=&floor=&status=&order=">
  고급 화면으로 보기 ▶️
</a>

<br><br>

<table>
  <thead>
    <tr>
      <th>업소명</th>
      <th>섹션</th>
      <th>층</th>
      <th>상태</th>
      <th>배달</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each lists}}
      <tr>
        <td>{{name}}</td>
        <td>{{sectionName}}</td>
        <td>{{floor}}</td>
        <td>{{statusKor}}</td>
        <td>
          {{#if canTakeout}}
            ✔️
          {{^}}
            ❌
          {{/if}}
        </td>
        <td>
          <a href="/business/{{ id }}">
            자세히
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

